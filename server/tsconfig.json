{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "**/*.test.ts"
  ]
}
